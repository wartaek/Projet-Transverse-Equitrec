<!doctype html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        <link rel="shortcut icon" href="/img/MonLogo.jpg"/>
        <link rel="stylesheet" href="/css/header.css">
    {% endblock %}
    <title>{% block title %}Accueil Equitrec{% endblock %}</title>
    <nav>
        <a href="{{ path('accueil') }}"><img src="{{ asset('img/MonLogo.jpg') }}" alt="Accueil" style="width: 80px; height: 80px; border-radius: 50%; text-decoration: none;"></a>
