        <a href="{{ path('cavalier') }}" style="text-decoration: none;">Cavaliers</a>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a style="background-color: #baf3ff; text-decoration: none;" href="{{ path('compte') }}">Mon Compte</a>
            <a href="{{ path('app_logout') }}" style="text-decoration: none;">DÃ©connexion</a>
        {% else %}
            <a href="{{ path('app_login') }}" style="text-decoration: none;">Connexion</a>
        {% endif %}
    </nav>
</head>
<body>
    {% block content %}
        {# Le contenu de chaque page sera ici #}
    {% endblock %}


