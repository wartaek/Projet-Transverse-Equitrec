{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	{{ parent() }}
	<style>
		main {
			display: flex;
			justify-content: center;
			align-items: center;
		}

		table {
			border-collapse: collapse;
			width: 100%;
			font-size: 16px;
			border-radius: 2px;
		}

		th,
		td {
			border: 1.5px solid #ccc;
			padding: 10px;
			text-align: left;
		}

		th {
			background-color: #f2f2f2;
			font-weight: bold;
		}

		tr:nth-child(even) {
			background-color: #f9f9f9;
		}
	</style>
{% endblock %}
{% block content %}
	<main>
		<div>
			<h2>RÃ©sultats des cavaliers par obstacles</h2>

			<table>
				<thead>
					<tr>
						<th>Obstacle</th>
                        <th>Accerder au notes</th>
					</tr>
				</thead>
				<tbody>
					{% for obstacle in obstacles %}
						<tr>
							<td>{{ obstacle.nom }}</td>
                            <td>
                                <center>
                                <a href="{{ path('app_notes_by_obstacle', {'id': obstacle.id}) }}">
                                    aller aux notes
                                </a>
                                </center>
                            </td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			<br>
		</div>
	</main>
{% endblock %}
